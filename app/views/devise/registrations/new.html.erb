
<div class="container" style="margin-top:100px;margin-bottom:100px;width:40%" >
  <div class="card">
    <h5 class="card-header bg-success text-white">Sign up</h5>
    <div class="card-body">

      <% resource.build_secret if resource.secret.nil? %>
      <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label 'first:' %><br/>
          <%= f.text_field :first, class: "form-control", autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label 'last:'%><br/>
          <%= f.text_field :last, class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.label 'email:' %><br/>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag 'code:' %><br/>
          <%= text_field_tag 'user[code]', nil, class: "form-control" %>
        </div

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-info"%>
        </div>
      <% end %>

    </div>
  </div>
</div>