<div class="container" style="margin-top:100px;margin-bottom:100px;width:40%" >
  <div class="card">
    <h5 class="card-header bg-success text-white">Sign in</h5>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email,  class: "form-control", autofocus: true%>
        </div>

        <div class="form-group">
          <%= f.label :secret %><br />
          <%= f.password_field :secret, class: "form-control"%>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-info"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%#= render "devise/shared/links" %>
